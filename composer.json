{
    "name": "justoverclock/staff-members-widget",
    "description": "Staff Members Widget",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0",
        "afrux/forum-widgets-core": "^0.1.0"
    },
    "authors": [
        {
            "name": "Marco Colia",
            "email": "info@flarum.it",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Justoverclock\\StaffMemberWidget\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Staff Members Widget",
            "category": "feature",
            "icon": {
                "name": "fas fa-users-crown",
                "color": "red",
                "backgroundColor": "white"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": false,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
